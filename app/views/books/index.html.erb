<h1>User info</h1>
<% @books.each do |book| %>
  <div>

    <p>投稿ユーザー画像:<%= image_tag book.user.get_profile_image(100,100) %></p>

    <p>name：<%= book.user.name %></p>
    <p>introduction：<%= book.body %></p>
  </div>
<% end %>


<h1>New book</h1>

<%= form_with model: @book do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>
<%=f.submit 'Create Book' %>
<% end %>


