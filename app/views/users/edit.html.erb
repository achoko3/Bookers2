<%= flash[:notice] %>
<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <div>
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
  </div>
  <div>
    <label for="inputImage">Image</label><br>
    <%= f.file_field :profile_image, placeholder: "User info", accept: "image/*" %>
  </div>
  <div>
    <label for="inputIntroduction">Introduction</label><br>
    <%= f.text_area :introduction %><br>
    <%= f.submit "Update User", class: "btn btn-secondary" %>
  </div>
<% end %>


